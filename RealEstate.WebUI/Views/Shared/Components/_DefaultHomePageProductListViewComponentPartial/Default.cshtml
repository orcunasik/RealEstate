@model List<RealEstate.WebUI.Dtos.ProductDtos.ResultProductDto>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori İlanları</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <a href="property-single.html">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>Satın Al</span><span>Kirala</span></div>
                                <img class="img-fluid" src="~/webUI/assets/images/p1.jpg" alt="">
                                <div class="box-content">
                                    <h3 class="title">TL @product.Price</h3>
                                    <span class="post">@product.City, @product.District</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
