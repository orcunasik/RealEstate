@model List<RealEstate.WebUI.Dtos.ProductDtos.ResultProductDto>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="heading text-center mx-auto">
                <h3 class="title-big">Günün Favori İlanları</h3>
            </div>
            <div class="row pt-md-5 pt-4">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 mb-3">
                        <a href="property-single.html">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>@product.Type</span><span>@product.CategoryName</span></div>
                                <img class="img-fluid" style="height:13.5em;width:43,75em" src="@product.CoverImage" alt="Resim Bulunamadı">
                                <div class="box-content">
                                    <h3 class="title">TL @product.Price</h3>
                                    <span class="post">@product.Address - @product.District - @product.City</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }

            </div>
        </div>
    </div>
</section>
