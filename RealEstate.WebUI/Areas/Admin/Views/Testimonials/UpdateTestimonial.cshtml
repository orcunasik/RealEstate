@model UpdateTestimonialDto

@{
    ViewData["Title"] = "Referans Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni Referans Kaydı</h6>
        <form method="post">
            <input type="hidden" asp-for="TestimonialId" />
            <label asp-for="NameSurname">Ad Soyad</label>
            <input type="text" asp-for="NameSurname" class="form-control" />
            <br />
            <label asp-for="Title">Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label asp-for="Comment">Yorum</label>
            <textarea style="height: 150px;" asp-for="Comment" class="form-control" id="floatingTextarea"></textarea>
            <br />
            <label asp-for="Status">Durumu</label>
            <input type="text" asp-for="Status" class="form-control" />
            <br />
            <button class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
</div>