@model List<ResultTestimonialDto>

@{
    ViewData["Title"] = "Referanslarımız";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Referanslarımız</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adı Soyadı</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Yorum</th>
                        <th scope="col">Durumu</th>
                        <th scope="col" colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ResultTestimonialDto entity in Model)
                    {
                        <tr>
                            <th scope="row">@entity.TestimonialId</th>
                            <td>@entity.NameSurname</td>
                            <td>@entity.Title</td>
                            <td>@entity.Comment</td>
                            <td>@entity.Status</td>
                            <td><a asp-area="Admin" asp-controller="Testimonials" asp-action="UpdateTestimonial" asp-route-id="@entity.TestimonialId" class="btn btn-outline-primary">Güncelle</a></td>
                            <td><a asp-area="Admin" asp-controller="Testimonials" asp-action="DeleteTestimonial" asp-route-id="@entity.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-area="Admin" asp-controller="Testimonials" asp-action="CreateTestimonial" class="btn btn-outline-info">Yeni Referans Ekle</a>
        </div>
    </div>
</div>