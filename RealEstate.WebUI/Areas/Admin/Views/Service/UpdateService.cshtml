@model UpdateServiceDto

@{
    ViewData["Title"] = "Hizmet Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Yeni Hizmet Oluştur</h6>
        <form method="post">
            <label>Hizmet Adı</label>
            <input type="text" asp-for="ServiceName" class="form-control" />
            <br />
            <label>Durumu</label>
            <input type="text" asp-for="ServiceStatus" class="form-control" />
            <br />
            <button class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
</div>