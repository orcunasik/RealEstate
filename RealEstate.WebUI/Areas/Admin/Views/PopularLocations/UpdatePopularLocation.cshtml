@model UpdatePopularLocationDto

@{
    ViewData["Title"] = "Lokasyon Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Lokasyon Güncelle</h6>
        <form method="post">
            <input type="hidden" asp-for="LocationId" />
            <label asp-for="CityName">Şehir</label>
            <input type="text" asp-for="CityName" class="form-control" />
            <br />
            <label asp-for="ImageUrl">Görsel</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <button class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
</div>