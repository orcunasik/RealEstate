@model List<ResultBottomGridDto>

@{
    ViewData["Title"] = "Kılavuz Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Kılavuz Listesi</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">İcon</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Açıklamalar</th>
                        <th scope="col" colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ResultBottomGridDto entity in Model)
                    {
                        <tr>
                            <th scope="row">@entity.BottomGridId</th>
                            <td>@entity.Icon</td>
                            <td>@entity.Title</td>
                            <td>@entity.Description</td>
                            <td><a asp-area="Admin" asp-controller="BottomGrids" asp-action="UpdateBottomGrid" asp-route-id="@entity.BottomGridId" class="btn btn-outline-primary">Güncelle</a></td>
                            <td><a asp-area="Admin" asp-controller="BottomGrids" asp-action="DeleteBottomGrid" asp-route-id="@entity.BottomGridId" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-area="Admin" asp-controller="BottomGrids" asp-action="CreateBottomGrid" class="btn btn-outline-info">Yeni Kılavuz</a>
        </div>
    </div>
</div>