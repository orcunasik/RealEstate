@model List<ResultWhoWeAreDetailDto>

@{
    ViewData["Title"] = "Biz Kimiz?";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Biz Kimiz</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Başlık</th>
                        <th scope="col">Alt Başlık</th>
                        <th scope="col">Açıklamalar</th>
                        <th scope="col">Diğer Bilgiler</th>
                        <th scope="col" colspan="2">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ResultWhoWeAreDetailDto entity in Model)
                    {
                        <tr>
                            <th scope="row">@entity.WhoWeAreDetailId</th>
                            <td>@entity.Title</td>
                            <td>@entity.Subtitle</td>
                            <td>@entity.Description1</td>
                            <td>@entity.Description2</td>
                            <td><a asp-area="Admin" asp-controller="WhoWeAre" asp-action="UpdateWhoWeAreDetail" asp-route-id="@entity.WhoWeAreDetailId" class="btn btn-outline-primary">Güncelle</a></td>
                            <td><a asp-area="Admin" asp-controller="WhoWeAre" asp-action="DeleteWhoWeAreDetail" asp-route-id="@entity.WhoWeAreDetailId" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-area="Admin" asp-controller="WhoWeAre" asp-action="CreateWhoWeAreDetail" class="btn btn-outline-info">Yeni Detay</a>
        </div>
    </div>
</div>

