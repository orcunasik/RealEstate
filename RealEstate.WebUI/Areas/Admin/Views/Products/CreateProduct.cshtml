@model CreateProductDto
@{
    ViewData["Title"] = "Yeni İlan";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Yeni İlan Girişi</h6>
                <form method="post">
                    <label>İlan Başlığı</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>İlan Türü</label>
                    <input type="text" asp-for="Type" class="form-control" />
                    <br />
                    <label>Kategori Adı</label>
                    <input type="text" asp-for="CategoryName" class="form-control" />
                    <br />
                    <label>İlan Fiyatı</label>
                    <input type="number" asp-for="Price" class="form-control" />
                    <br />
                    <label>Şehir</label>
                    <input type="text" asp-for="City" class="form-control" />
                    <br />
                    <label>İlçe</label>
                    <input type="text" asp-for="District" class="form-control" />
                    <br />
                    <label>Kapak Fotoğrafı</label>
                    <input type="text" asp-for="CoverImage" class="form-control" />
                    <br />
                    <label>Açık Adresi</label>
                    <textarea asp-for="Address" class="form-control" rows="5"></textarea>
                    <br />
                    <button class="btn btn-outline-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

