@model List<ResultEmployeeDto>
@{
    ViewData["Title"] = "Personeller";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Adı Soyadı</th>
                                <th scope="col">Ünvanı</th>
                                <th scope="col">Eposta</th>
                                <th scope="col">Tel Nu.</th>
                                <th scope="col">Durumu</th>
                                <th scope="col" colspan="2">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ResultEmployeeDto employee in Model)
                            {
                                <tr>
                                    <th scope="row">@employee.EmployeeId</th>
                                    <td>@employee.Name</td>
                                    <td>@employee.Title</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.PhoneNumber</td>
                                    <td>@employee.Status</td>
                                    <td><a asp-area="Admin" asp-controller="Employees" asp-action="UpdateEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-outline-primary">Güncelle</a></td>
                                    <td><a asp-area="Admin" asp-controller="Employees" asp-action="DeleteEmployee" asp-route-id="@employee.EmployeeId" class="btn btn-outline-danger">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a asp-area="Admin" asp-controller="Employees" asp-action="CreateEmployee" class="btn btn-outline-info">Yeni Personel</a>
                </div>
            </div>
        </div>
    </div>
</div>


