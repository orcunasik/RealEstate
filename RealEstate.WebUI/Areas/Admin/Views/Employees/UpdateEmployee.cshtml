@model UpdateEmployeeDto
@{
    ViewData["Title"] = "Personel Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Personel Bilgileri GÜncelle</h6>
        <form method="post">
            <input type="hidden" asp-for="EmployeeId" />
            <label asp-for="Name">Adı Soyadı</label>
            <input type="text" asp-for="Name" class="form-control" />
            <br />
            <label asp-for="Title">Ünvanı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label asp-for="Email">Eposta Adresi</label>
            <input type="email" asp-for="Email" class="form-control" />
            <br />
            <label asp-for="PhoneNumber">Tel. Nu:</label>
            <input type="text" asp-for="PhoneNumber" class="form-control" />
            <br />
            <label asp-for="ImageUrl">Profil Resmi</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <label asp-for="Status">Durumu</label>
            <input type="text" asp-for="Status" class="form-control" />
            <br />
            <button class="btn btn-outline-success">Kaydet</button>
        </form>
    </div>
</div>